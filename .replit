modules = ["php-8.2", "nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["artisan"]

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Start Frontend"

[[workflows.workflow]]
name = "Start Backend"
author = 46157875
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && composer install && php artisan serve --host=0.0.0.0 --port=8000"

[[workflows.workflow]]
name = "Start Frontend"
author = 46157875
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm install && npm run dev -- --host 0.0.0.0 --port=5000"

[[ports]]
localPort = 5000
externalPort = 80
